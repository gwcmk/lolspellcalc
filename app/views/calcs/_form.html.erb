<div class="form-group">
  <%= f.label :attack_damage %><br>
  <%= f.text_field :attack_damage, class: 'form-control', :placeholder => "Base AD + Bonus AD" %>
</div>

<div class="form-group">
  <%= f.label :bonus_attack_damage %><br>
  <%= f.text_field :bonus_attack_damage, class: 'form-control', :placeholder => "Bonus AD" %>
</div>

<div class="form-group">
  <%= f.label :ability_power %><br>
  <%= f.text_field :ability_power, class: 'form-control', :placeholder => "AP" %>
</div>

<div class="form-group">
  <%= f.label :ult, "Ult?" %><br>
  
  <div class="radio radio-primary">
  <label>
    <%= f.radio_button :ult, "Yes" %>
    <%= f.label :ult, "Yes", :value => "Yes"  %>
  </label>
  </div>
  <div class="radio radio-primary">
  <label>
    <%= f.radio_button :ult, "No" %>
    <%= f.label :ult, "No", :value => "No"  %>
  </label>
  </div>
</div>

<div class="form-group">
  <%= f.label :cooldown_reduction, "Cooldown reduction (%)" %><br>
  <%= f.text_field :cooldown_reduction, class: 'form-control', :placeholder => "CDR" %>
</div>

<div class="form-group">
  <%= f.label :fight_time, "What kind of scenario is it?" %><br>
  <div class="radio radio-primary">
  <label>
    <%= f.radio_button :fight_time, 0 %>
    <%= f.label :fight_time, "Quick duel", :value => 0  %>
  </label>
  </div>
  <div class="radio radio-primary">
  <label>
    <%= f.radio_button :fight_time, 10 %>
    <%= f.label :fight_time, "Skirmish/gank", :value => 10  %>
  </label>
  </div>
  <div class="radio radio-primary">
  <label>
    <%= f.radio_button :fight_time, 30 %>
    <%= f.label :fight_time, "Extended team fight", :value => 30  %>
  </label>
  </div>
</div>

<div class="form-group">
  <%= f.submit "Calculate", class: 'btn btn-primary' %>
</div>

